<odoo>
    <template id="report_purchaseorder_document_custom">
        <t t-call="web.html_container">
            <!-- Iterar sobre los documentos (orders) -->
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Contenido en dos columnas -->
                        <table style="width: 100%; margin-bottom: 20px; border-collapse: collapse; ">
                            <tr>
                                <td style="width: 50%; padding: 8px;  vertical-align: top; border: 1px solid #ffffff">
                                    <p style="margin: 0; font-size: 14px; line-height: 1.6;">
                                        <strong>Proveedor:</strong><br />
                                        Nombre del Proveedor
                                    </p>
                                    <p style="margin: 5px 0; font-size: 12px; color: #555; line-height: 1.4;">
                                        Dirección del Proveedor<br />
                                        Ciudad del Proveedor, Estado del Proveedor<br />
                                        <strong>RFC:</strong> RFC del Proveedor
                                    </p>
                                </td>
                                <td style="
                                width: 50%; padding: 8px;  vertical-align: top; border: 1px solid #ffffff">
                                     <p style="margin: 5px 0; font-size: 12px; color: #555; line-height: 1.4;">
                                      <p style="margin: 0; font-size: 14px; line-height: 1.6;">
                                        <strong>Dirección de Entrega:</strong><br />
                                        Nombre del Receptor
                                    </p>
                                        <br />
                                        Ciudad de entrega, Estado de Entrega<br />
                                        <strong>#:</strong> 18 C
                                    </p>
                                </td>
                            </tr>
                        </table>

                        <!-- Solicitud de Presupuesto -->
                        <div class="request-header" style="padding: 20px; border-bottom: 3px solid #cccccc; margin-bottom: 35px; font-size: 18px; background-color: #f1f1f1; border-radius: 5px;">
                            <p style="margin-bottom: 10px; font-size: 24px; font-weight: bold; color: #333333;"><strong>Requisición de Presupuesto #Número de Presupuesto</strong></p>
                            <p style="margin-bottom: 10px; font-size: 16px; color: #555555;">Representante del Proveedor: <span style="font-weight: bold; color: #000000;">Nombre del Representante</span></p>
                            <p style="margin-bottom: 0; font-size: 16px; color: #555555;">Fecha del pedido: <span style="font-weight: bold; color: #000000;">Fecha del Pedido</span></p>
                        </div>


                        <!-- Detalles de la Orden de Compra -->
                        <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                            <thead>
                                <tr style="background-color: #f0f0f0;">
                                    <th style="padding: 12px; border: 1px solid #ddd; text-align: left;">Descripción</th>
                                    <th style="padding: 12px; border: 1px solid #ddd; text-align: right;">Cant</th>
                                    <th style="padding: 12px; border: 1px solid #ddd; text-align: right;">Precio Unidad</th>
                                    <th style="padding: 12px; border: 1px solid #ddd; text-align: right;">Monto</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="padding: 10px; border: 1px solid #ddd;">Descripción del Producto</td>
                                    <td style="padding: 10px; border: 1px solid #ddd; text-align: right;">Cantidad</td>
                                    <td style="padding: 10px; border: 1px solid #ddd; text-align: right;">Precio Unitario</td>
                                    <td style="padding: 10px; border: 1px solid #ddd; text-align: right;">Monto Total</td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Totales -->
                        <table class="subtotal-section" style="width: 60%; border-collapse: collapse; margin-top: 30px; margin-left: auto; font-size: 16px;">
                            <tbody>
                                <tr>
                                    <td style="padding: 10px; border: 1px solid #ddd;"><strong>Subtotal:</strong></td>
                                    <td class="text-right" style="padding: 10px; border: 1px solid #ddd;">Subtotal en Moneda</td>
                                </tr>
                                <tr>
                                    <td style="padding: 10px; border: 1px solid #ddd;"><strong>Impuestos (16%):</strong></td>
                                    <td class="text-right" style="padding: 10px; border: 1px solid #ddd;">Impuestos en Moneda</td>
                                </tr>
                                <tr>
                                    <td style="padding: 10px; border: 1px solid #ddd;"><strong>Total:</strong></td>
                                    <td class="text-right" style="padding: 10px; border: 1px solid #ddd;"><strong>Total en Moneda</strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

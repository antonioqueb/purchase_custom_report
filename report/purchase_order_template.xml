<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_purchaseorder_document_custom">
        <div class="page" style="font-family: 'DejaVu Sans', sans-serif; margin: 5px 20px;">
            <main t-foreach="docs" t-as="doc">
                <!-- Encabezado y Logo -->
                <div class="row" style="border-bottom: 2px solid #000; padding-bottom: 10px; margin-bottom: 10px;">
                    <div class="col-6">
                        <!-- Logo dinámico de la empresa seleccionada -->
                        <img t-att-src="company_data.logo" style="max-width: 150px;" alt="Company Logo"/>
                    </div>
                    <div class="col-6" style="text-align: right;">
                        <p style="margin: 0; font-size: 14px;"><strong t-esc="company_data.name"/></p>
                        <p style="margin: 0; font-size: 12px;" t-esc="company_data.street"/>
                        <p style="margin: 0; font-size: 12px;">
                            <span t-esc="company_data.zip"/> <span t-esc="company_data.city"/>, <span t-esc="company_data.state_id.name"/>, <span t-esc="company_data.country_id.name"/>
                        </p>
                        <p style="margin: 0; font-size: 12px;">Tel: <span t-esc="company_data.phone"/></p>
                    </div>
                </div>
                
                <!-- Información del Proveedor -->
                <div class="row" style="margin-bottom: 10px;">
                    <div class="col-6">
                        <p style="margin: 0; font-size: 14px;"><strong>Proveedor:</strong> <span t-esc="doc.partner_id.name"/></p>
                        <p style="margin: 0; font-size: 12px;" t-esc="doc.partner_id.street"/>
                        <p style="margin: 0; font-size: 12px;">RFC: <span t-esc="doc.partner_id.vat"/></p>
                    </div>
                    <div class="col-6" style="text-align: right;">
                        <p style="margin: 0; font-size: 14px;"><strong>Dirección de Envío:</strong></p>
                        <p style="margin: 0; font-size: 12px;" t-esc="doc.partner_shipping_id.street"/>
                        <p style="margin: 0; font-size: 12px;">Tel: <span t-esc="doc.partner_shipping_id.phone"/></p>
                    </div>
                </div>

                <!-- Detalles de la Orden de Compra -->
                <h2 style="font-size: 16px; margin-bottom: 10px;">Solicitud de Presupuesto #<span t-esc="doc.name"/></h2>
                <table class="table table-sm o_main_table" style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr style="background-color: #f0f0f0;">
                            <th style="padding: 8px; border: 1px solid #ddd; text-align: left;">Descripción</th>
                            <th style="padding: 8px; border: 1px solid #ddd; text-align: left;">Impuestos</th>
                            <th style="padding: 8px; border: 1px solid #ddd; text-align: center;">Fecha Req.</th>
                            <th style="padding: 8px; border: 1px solid #ddd; text-align: right;">Cantidad</th>
                            <th style="padding: 8px; border: 1px solid #ddd; text-align: right;">Precio Unitario</th>
                            <th style="padding: 8px; border: 1px solid #ddd; text-align: right;">Monto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="doc.order_line" t-as="line">
                            <td style="padding: 8px; border: 1px solid #ddd;" t-esc="line.name"/>
                            <td style="padding: 8px; border: 1px solid #ddd;" t-esc="line.taxes_id.name"/>
                            <td style="padding: 8px; border: 1px solid #ddd; text-align: center;" t-esc="line.date_planned"/>
                            <td style="padding: 8px; border: 1px solid #ddd; text-align: right;" t-esc="line.product_qty"/>
                            <td style="padding: 8px; border: 1px solid #ddd; text-align: right;" t-esc="line.price_unit"/>
                            <td style="padding: 8px; border: 1px solid #ddd; text-align: right;" t-esc="line.price_total"/>
                        </tr>
                    </tbody>
                </table>

                <!-- Totales -->
                <div class="row" style="margin-top: 10px;">
                    <div class="col-6">
                        <p style="margin: 0; font-size: 14px;"><strong>Subtotal:</strong> <span t-esc="doc.amount_untaxed"/></p>
                        <p style="margin: 0; font-size: 14px;"><strong>Impuestos:</strong> <span t-esc="doc.amount_tax"/></p>
                        <p style="margin: 0; font-size: 14px;"><strong>Total:</strong> <span t-esc="doc.amount_total"/></p>
                    </div>
                </div>

                <!-- Información adicional -->
                <p style="margin-top: 20px; font-size: 12px;">Dato Fiscal: <span t-esc="company_data.email"/></p>
                <p style="font-size: 12px;">Tel: <span t-esc="company_data.phone"/></p>
            </main>
        </div>
    </template>
</odoo>

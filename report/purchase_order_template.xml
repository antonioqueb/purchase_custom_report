<odoo>
    <template id="report_purchaseorder_document_custom">
        <t t-call="web.html_container">
            <!-- Iterar sobre los documentos (orders) -->
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Contenido en dos columnas -->
                        <table style="width: 100%; margin-bottom: 20px; border-collapse: collapse; ">
                            <tr>
                                <td style="width: 50%; padding: 8px;  vertical-align: top; border: 1px solid #ffffff">
                                    <p style="margin: 0; font-size: 14px; line-height: 1.6;">
                                        <strong>Proveedor:</strong><br />
                                        Nombre del Proveedor
                                    </p>
                                    <p style="margin: 5px 0; font-size: 12px; color: #555; line-height: 1.4;">
                                        Dirección del Proveedor<br />
                                        Ciudad del Proveedor, Estado del Proveedor<br />
                                        <strong>RFC:</strong> RFC del Proveedor
                                    </p>
                                </td>
                                <td style="width: 50%; padding: 8px;  vertical-align: top; border: 1px solid #ffffff">
                                    <p style="margin: 0; font-size: 14px; line-height: 1.6;">
                                        <strong>Otra Información:</strong><br />
                                        Información adicional o vacía
                                    </p>
                                </td>
                            </tr>
                        </table>

                        <!-- Solicitud de Presupuesto -->
                        <div class="request-header" style="padding: 10px; border-bottom: 1px solid #ddd; margin-bottom: 20px; font-size: 14px;">
                            <p><strong>Requisición de Presupuesto #Número de Presupuesto</strong></p>
                            <p>Representante del Proveedor: Nombre del Representante</p>
                            <p>Fecha del pedido: Fecha del Pedido</p>
                        </div>

                        <!-- Detalles de la Orden de Compra -->
                        <table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
                            <thead>
                                <tr style="background-color: #f0f0f0;">
                                    <th style="padding: 8px; border: 1px solid #ddd; text-align: left;">Descripción</th>
                                    <th style="padding: 8px; border: 1px solid #ddd; text-align: right;">Cant</th>
                                    <th style="padding: 8px; border: 1px solid #ddd; text-align: right;">Precio Unidad</th>
                                    <th style="padding: 8px; border: 1px solid #ddd; text-align: right;">Monto</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="padding: 8px; border: 1px solid #ddd;">Descripción del Producto</td>
                                    <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">Cantidad</td>
                                    <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">Precio Unitario</td>
                                    <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">Monto Total</td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Totales -->
                        <table class="subtotal-section" style="width: 50%; border-collapse: collapse; margin-top: 20px; margin-left: auto; font-size: 14px;">
                            <tbody>
                                <tr>
                                    <td style="padding: 8px; border: 1px solid #ddd;"><strong>Subtotal:</strong></td>
                                    <td class="text-right" style="padding: 8px; border: 1px solid #ddd;">Subtotal en Moneda</td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px; border: 1px solid #ddd;"><strong>Impuestos (16%):</strong></td>
                                    <td class="text-right" style="padding: 8px; border: 1px solid #ddd;">Impuestos en Moneda</td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px; border: 1px solid #ddd;"><strong>Total:</strong></td>
                                    <td class="text-right" style="padding: 8px; border: 1px solid #ddd;"><strong>Total en Moneda</strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

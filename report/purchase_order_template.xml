            <main t-foreach="docs" t-as="doc">
                <!-- Información del Proveedor -->
                <div class="header-section" style="padding: 10px; margin-bottom: 20px;">
                    <div class="row" style="display: flex; justify-content: space-between; margin-bottom: 20px;">
                        <!-- Información del Proveedor -->
                        <div class="col-6" style="width: 48%;">
                            <p style="margin: 0; font-size: 14px; line-height: 1.6;">
                                <strong>Proveedor:</strong><br />
                                Industrias Químicas Orion S.A. de C.V.
                            </p>
                            <p style="margin: 5px 0; font-size: 12px; color: #555; line-height: 1.4;">
                                Avenida de las Estrellas No. 123<br />
                                Parque Industrial Norte, 54030 Tlalnepantla, Estado de México<br />
                                <strong>RFC:</strong> IQO990123H12
                            </p>
                        </div>

                        <!-- Dirección de Entrega y Fechas -->
                        <div class="col-6 text-right" style="width: 48%; display: flex; flex-direction: column; align-items: flex-end; justify-content: space-between;">
                            <p style="margin: 0; font-size: 14px; line-height: 1.6;">
                                <strong>Dirección de Entrega:</strong><br />
                                Calle del Trabajo No. 456, Col. Industrial<br />
                                03100 Ciudad de México, CDMX
                            </p>
                            <p style="margin: 0; font-size: 12px; color: #555; text-align: right; line-height: 1.4;">
                                <strong>Fecha del pedido:</strong> 15/08/2024 11:30:00<br />
                                <strong>Fecha requerida:</strong> 20/08/2024 08:00:00<br />
                                <strong>Solicitud de Presupuesto:</strong> #OR-458712
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Solicitud de Presupuesto -->
                <div class="request-header" style="padding: 10px; border-bottom: 1px solid #ddd; margin-bottom: 20px; font-size: 14px;">
                    <p><strong>Requisición de Presupuesto #OC0001</strong></p>
                    <p>Representante del Proveedor: Juan Pérez</p>
                    <p>Fecha del pedido: 15/08/2024 11:30:00</p>
                </div>

                <!-- Detalles de la Orden de Compra -->
                <table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
                    <thead>
                        <tr style="background-color: #f0f0f0;">
                            <th style="padding: 8px; border: 1px solid #ddd; text-align: left;">Descripción</th>
                            <th style="padding: 8px; border: 1px solid #ddd; text-align: right;">Cant</th>
                            <th style="padding: 8px; border: 1px solid #ddd; text-align: right;">Precio Unidad</th>
                            <th style="padding: 8px; border: 1px solid #ddd; text-align: right;">Monto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="padding: 8px; border: 1px solid #ddd;">BANDA DE TIEMPO DA630H100</td>
                            <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">2.00 UNIDAD</td>
                            <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">$1,764.00</td>
                            <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">$3,528.00</td>
                        </tr>
                    </tbody>
                </table>

                <!-- Totales -->
                <table class="subtotal-section" style="width: 50%; border-collapse: collapse; margin-top: 20px; margin-left: auto; font-size: 14px;">
                    <tbody>
                        <tr>
                            <td style="padding: 8px; border: 1px solid #ddd;"><strong>Subtotal:</strong></td>
                            <td class="text-right" style="padding: 8px; border: 1px solid #ddd;">$3,528.00</td>
                        </tr>
                        <tr>
                            <td style="padding: 8px; border: 1px solid #ddd;"><strong>Impuestos (16%):</strong></td>
                            <td class="text-right" style="padding: 8px; border: 1px solid #ddd;">$564.44</td>
                        </tr>
                        <tr>
                            <td style="padding: 8px; border: 1px solid #ddd;"><strong>Total:</strong></td>
                            <td class="text-right" style="padding: 8px; border: 1px solid #ddd;"><strong>$4,092.44</strong></td>
                        </tr>
                    </tbody>
                </table>

            </main>
        </div>
    </template>
</odoo>
